			}

			details summary {
				list-style: none;
			}
			details summary {
				position: relative;
				padding-left: 1.2em;
			}

			details summary::before {
				content: '';
				position: absolute;
				left: 0.4em;
				top: 0.1em;
				border: 0.333em solid transparent;
				border-left-color: currentColor;
				transform-origin: 25% 50%;
				transition: transform 0.2s ease;
			}

			details[open] summary::before {
				transform: rotate(90deg);
			}
